<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="DailyBibleReading.Views.TodaysChapter">
	
	<ListView x:Name="Verses" CachingStrategy="RecycleElement" HasUnevenRows="True" ItemsSource="{Binding}" ItemTapped="Handle_ItemTapped">
		<!--
		<ListView.Header>
			<Label Text="Today's Chapter"/>
		</ListView.Header>
		-->
		<ListView.ItemTemplate>
			<DataTemplate>
				<ViewCell>
					<StackLayout>
						<Label Text="{Binding VerseReference}" Style="{DynamicResource ListItemTextStyle}"/>
						<Label Text="{Binding text}" Style="{DynamicResource ListItemDetailTextStyle}"/>
					</StackLayout>
				</ViewCell>
				<!--
				<TextCell Text="{Binding VerseReference}" Detail="{Binding text}"/>
				-->
			</DataTemplate>
		</ListView.ItemTemplate>
		<!--
		<ListView.Footer>
			<Label Text="Some footer information."/>
		</ListView.Footer>
		-->
	</ListView>
</ContentPage>