<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="DailyBibleReading.Views.Bible">

	<RelativeLayout>
		<ListView x:Name="Chapters" CachingStrategy="RecycleElement" HasUnevenRows="True" ItemsSource="{Binding}" ItemTapped="Chapter_ItemTapped">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout>
							<Label Text="{Binding date}" Style="{DynamicResource ListItemTextStyle}"/>
							<Label Text="{Binding ChapterReference}" Style="{DynamicResource ListItemDetailTextStyle}"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
		<ListView x:Name="Verses" CachingStrategy="RecycleElement" HasUnevenRows="True" ItemsSource="{Binding}" ItemTapped="Verses_ItemTapped">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout>
							<Label Text="{Binding VerseReference}" Style="{DynamicResource ListItemTextStyle}"/>
							<Label Text="{Binding text}" Style="{DynamicResource ListItemDetailTextStyle}"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</RelativeLayout>
</ContentPage>